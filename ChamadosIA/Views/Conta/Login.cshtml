<link rel="stylesheet" href="~/css/site.css" />
@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #0f0f0f;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
    }

    .login-wrapper {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .login-container {
        max-width: 400px;
        margin: auto;
        background: linear-gradient(to right, #43cea2, #185a9d);
        border-radius: 12px;
        padding: 35px;
        color: white;
        box-shadow: 0 0 15px rgba(0,0,0,0.4);
    }

    .login-container h1 {
        text-align: center;
        font-size: 1.8rem;
        margin-bottom: 10px;
        font-weight: 600;
    }

    .login-container h2 {
        text-align: center;
        font-size: 1.2rem;
        margin-bottom: 25px;
        font-weight: 400;
        opacity: 0.9;
    }

    .form-control {
        border-radius: 8px;
        border: none;
        padding: 12px;
        margin-bottom: 15px;
        width: 100%;
        font-size: 1rem;
    }

    .btn-login {
        background-color: #00c6ff;
        border: none;
        border-radius: 8px;
        padding: 12px;
        width: 100%;
        color: white;
        font-weight: bold;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

    .btn-login:hover {
        background-color: #007acc;
    }

    .alert {
        background-color: #ff4d4d;
        border-radius: 8px;
        padding: 10px;
        margin-bottom: 15px;
        text-align: center;
    }

    .link-cadastro {
        text-align: center;
        margin-top: 15px;
    }

    .link-cadastro a {
        color: white;
        text-decoration: underline;
        font-size: 0.95rem;
    }

    footer {
        margin-top: auto;
        background-color: #1a1a1a;
        color: #ccc;
        text-align: center;
        padding: 15px;
        font-size: 0.85rem;
    }

    @@media (max-width: 480px) {
        .login-container {
            margin: 20px;
            padding: 25px;
        }

        .login-container h1 {
            font-size: 1.5rem;
        }

        .login-container h2 {
            font-size: 1rem;
        }
    }
</style>

<div class="login-wrapper">
    <div class="login-container">
        <h1>CATI</h1>
        <h2>Central de Atendimento de Tecnologia e Informação</h2>

        @if (ViewBag.Erro != null)
        {
            <div class="alert">@ViewBag.Erro</div>
        }

        <form asp-action="Login" method="post">
            <input type="email" name="email" class="form-control" placeholder="Email" required />
            <input type="password" name="senha" class="form-control" placeholder="Senha" required />
            <button type="submit" class="btn-login">Entrar</button>
        </form>

        <div class="link-cadastro">
            <a href="/Conta/Cadastro">Não tem conta? Cadastre-se</a>
        </div>
    </div>

    <footer>
        Este site é seguro e foi desenvolvido pela equipe da CATI.
    </footer>
</div>