@model List<ChamadosIA.Models.Chamado>
@{
    ViewData["Title"] = "Meus Chamados";
}

<link rel="stylesheet" href="~/css/site.css" />

<style>
    .dashboard-container {
        max-width: 900px;
        margin: 60px auto;
        background: linear-gradient(to right, #6dd5ed, #2193b0);
        border-radius: 12px;
        padding: 40px;
        color: white;
        box-shadow: 0 0 15px rgba(0,0,0,0.4);
    }

    .dashboard-container h2 {
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .dashboard-container h4 {
        text-align: center;
        font-weight: 400;
        margin-bottom: 30px;
        opacity: 0.9;
    }

    .chamado-card {
        background-color: rgba(0,0,0,0.2);
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .chamado-card h5 {
        font-size: 1.2rem;
        margin-bottom: 10px;
    }

    .chamado-card p {
        margin-bottom: 8px;
        font-size: 0.95rem;
    }

    .btn-group {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }

    .btn-action {
        flex: 1;
        padding: 10px;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        font-size: 0.95rem;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .btn-editar {
        background-color: #00c6ff;
        color: white;
    }

    .btn-editar:hover {
        background-color: #007acc;
    }

    .btn-cancelar {
        background-color: #ff4d4d;
        color: white;
    }

    .btn-cancelar:hover {
        background-color: #cc0000;
    }

    footer {
        margin-top: 30px;
        text-align: center;
        font-size: 0.85rem;
        color: #eee;
    }
</style>

<div class="dashboard-container">
    <h2>üìÇ Meus Chamados</h2>
    <h4>Acompanhe seus chamados e atualize informa√ß√µes quando necess√°rio</h4>

    @if (Model != null && Model.Any())
    {
        foreach (var chamado in Model)
        {
            <div class="chamado-card">
                <h5>Chamado #@chamado.ID_Chamado - @chamado.Titulo</h5>
                <p><strong>Status:</strong> @chamado.Status</p>
                <p><strong>Descri√ß√£o:</strong> @chamado.Descricao</p>
                <p><strong>Setor:</strong> @chamado.Setor</p>
                <p><strong>Telefone:</strong> @chamado.TelefoneContato</p>
                <p><strong>Endere√ßo:</strong> @chamado.EnderecoAtendimento</p>

                <div class="btn-group">
                    <a href="/Chamado/Editar/@chamado.ID_Chamado" class="btn-action btn-editar">‚úèÔ∏è Editar</a>
                    <a href="/Chamado/Cancelar/@chamado.ID_Chamado" class="btn-action btn-cancelar">‚ùå Cancelar</a>
                </div>
            </div>
        }
    }
    else
    {
        <p style="text-align:center;">Nenhum chamado encontrado.</p>
    }

    <footer>
        Este site √© seguro e foi desenvolvido pela equipe do CATI.
    </footer>
</div>